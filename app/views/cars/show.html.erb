<h1><%= @car.brand %></h1>
<h2><%= @car.model %></h2>
<h3><%= @car.fuel %></h3>
<h3><%= @car.year %></h3>


<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite] do |f| %>
    <%= f.submit 'Save in my garage', class: "btn btn-primary" %>
  <% end %>
<% else %>
  <p>This car is already in your garage!</p>
<% end %>


<h1>New review</h1>
<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
  <%= link_to 'Back to all cars', cars_path %>
<% end %>
<hr>

<% @car.reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p><%= '⭐' * review.rating %></p>
<% end %>
